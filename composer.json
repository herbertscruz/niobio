{
  "name": "niobio/niobio",
  "type": "project",
  "description": "The Niobio Framework.",
  "keywords": [
      "framework",
      "niobio"
  ],
  "license": "MIT",
  "require": {
      "php": "^7.1.3",
      "niobio/framework": "0.1-dev"
  },
  "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
  },
  "autoload": {
      "psr-4": {
          "App\\": "app/"
      }
  },
  "autoload-dev": {
      "psr-4": {
          "Tests\\": "tests/"
      }
  },
  "scripts": {
    "post-root-package-install": [
        "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "minimum-stability": "dev"
}